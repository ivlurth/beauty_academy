<%= render "shared/header"%>
<div class = "content-part">
    <div class = "content-text">
<h1 class="page_name">All active users</h1>
<% if user_signed_in? && current_user.role == 1%>
    <% @users.each do |user|%>
    <p>id: <%= user.id %></p>
    <p>email: <%= user.email %> </p>
    <p>phone: <%= user.phone %> </p>
    <p>role: <% if user.role == 1%>
    admin <% else %>
    user <% end %>
    <br><br>
    <% end %>
<% else %>
    <p> You are not allowed to this page! </p>
<% end %>


 </div>
</div>
  
<%= render "shared/footer"%>
