<%= render "shared/header"%>
<div class = "content-part">
    <div class = "content-text">

<% course = Course.find(id = @content.course_id)%>

<h1 class="page_name"><%= course.name %></h1>
<% if user_signed_in? && current_user.role == 1 %>

    
    <%= form_with model: @content do |form| %>

    <%= form.hidden_field :course_id, value: course.id %>
    <p> <%= form.text_area :body, rows: 20 %> </p>
    <p> <%= form.submit 'Ok' %></p>
    <% end %>

<% else %>

<p> You are not allowed to edit such content! </p>

<% end%>

 </div>
</div>
  
<%= render "shared/footer" %>
