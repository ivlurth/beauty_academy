<p><%= @course.name %></p>
<p><%= @course.description_long %></p>
<p><%= @course.price %></p>


<% if user_signed_in?%>

    <% if current_user.role == 1%>
        <p><%= link_to 'Edit', edit_course_path(@course)%></p>
        <p><%= button_to 'Delete', course_path(@course), method: :delete%></p>
    <% end %>

    
    <% course_owned = Ownedcourse.where(course_id: @course.id, user_id: current_user.id)%>
    <% if course_owned.size != 0 %>
        <p>You already have this course</p>
    <% else %>
        <%= link_to 'Buy', new_ownedcourse_path(:id => params[:id]) %>
    <% end %>

<% end %>

<p> <%= link_to 'Back', courses_path %></p>
