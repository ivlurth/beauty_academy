<%= render "shared/header"%>
<div class = "content-part">
    <div class = "content-text">
 
    
    <h1 class = "page_name">SIGN UP</h1>
      
        <div class="forms">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "beautiful-textfield" %>
        </div>


        <div class="field">
        <%= f.label :password %>
        
        <%= f.password_field :password, autocomplete: "new-password", class: "beautiful-textfield" %>
        </div>

        <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "beautiful-textfield" %>
        </div>

        <div class="actions center-button">
        <%= f.submit "Sign up", class: "button-1" %>
        </div>
        <% end %>

        </div>
        <%= render "devise/shared/links" %>

 </div>
</div>
  
   
    

  
<%= render "shared/footer" %>


